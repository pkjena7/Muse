<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="At a Glance"
                android:textSize="20dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Vitals"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_baseline_add_circle_24" />

                <TextView
                    android:id="@+id/heartrate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/image"
                    android:text="Heartrate"
                    android:textColor="#000000"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/bpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heartrate"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@+id/image"
                    android:text="--bpm"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bpm"
                    android:layout_marginLeft="35dp"
                    android:layout_toRightOf="@+id/image"
                    android:text="20 May,2020"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/button"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/heartrate"
                    android:text="Measure"
                    android:textSize="10dp"
                    android:textColor="#000000" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_baseline_add_circle_24" />

                    <TextView
                        android:id="@+id/heartrate1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/image1"
                        android:text="SpO2"
                        android:textColor="#000000"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/bpm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heartrate1"
                        android:layout_marginLeft="35dp"
                        android:layout_toRightOf="@+id/image1"
                        android:text="--0%"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bpm1"
                        android:layout_marginLeft="35dp"
                        android:layout_toRightOf="@+id/image1"
                        android:text="20 May,2020"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/button"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@+id/heartrate1"
                        android:text="Measure"
                        android:textSize="10dp"
                        android:textColor="#000000" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/ic_baseline_add_circle_24" />

                    <TextView
                        android:id="@+id/heartrate2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/image2"
                        android:text="Body Temperature"
                        android:textColor="#000000"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/bpm2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heartrate2"
                        android:layout_marginLeft="35dp"
                        android:layout_toRightOf="@+id/image2"
                        android:text="--F"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bpm2"
                        android:layout_marginLeft="35dp"
                        android:layout_toRightOf="@+id/image2"
                        android:text="20 May,2020"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/button"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@+id/heartrate2"
                        android:text="Measure"
                        android:textSize="10dp"
                        android:textColor="#000000" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>